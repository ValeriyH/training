<Window x:Class="WpfApplication.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User" Height="184" Width="280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <TextBox Height="23" Margin="27,10,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Name="UserBox"/>
        <TextBox Height="23" Margin="27,45,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Name="CommentBox"/>
        <Label Content="User Name:" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Comment:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="43,98,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="OK_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="73,98,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Cancel_Click"/>

    </Grid>
</Window>
